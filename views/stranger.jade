doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/stranger.min.css')
  body
    nav.navbar.navbar-default(role='navigation')
      div.navbar-header
        a.navbar-brand(href='#') Cos√©
    div.container
      div.row.authWraper
        div.col-md-3.col-md-offset-2
          a(href="/auth/facebook")#facebookLogin.autoLogin 
          a(href="/auth/twitter")#twitterLogin.autoLogin
          a(href="/auth/google")#googleLogin.autoLogin
        div.col-md-2.authForms
          div.slideForms
            form(action="/login",method="POST")#form-login
              input(type="email", placeholder="email", name="email").form-control
              input(type="password", placeholder="password", name="password").form-control
              button(type="submit").btn.btn-primary log in
              p Don't have an account? 
                a(href="#signup") 
                  strong Sign Up
            form(action="/signup",method="POST")#form-signup
              input(type="email", placeholder="email", name="email").form-control
              input(type="password", placeholder="password", name="password").form-control
              input(type="password", placeholder="password", name="passwordRetype").form-control
              button(type="submit").btn.btn-primary sign up
              p Already have an acoount?
                a(href="#signin")
                  strong Sign In

    script(src="/javascripts/jquery-2.0.3.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/stranger.js")
