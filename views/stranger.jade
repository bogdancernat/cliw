doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/stranger.min.css')
  body
    nav.navbar.navbar-default(role='navigation')
      div.navbar-header
        a.navbar-brand(href='#') Cos√©
    div.container
      div.row
        div.col-md-8
          div.col-md-4
          a(href="/auth/facebook") Facebook
          a(href="/auth/twitter") Twitter
          a(href="/auth/google") Google
          div.col-md-4
            form(action="/login",method="POST")
              input(type="email", placeholder="email", name="email").form-control
              input(type="password", placeholder="password", name="password").form-control
              button(type="submit").btn.btn-primary log in
          div.col-md-4.signupForm
            form(action="/signup",method="POST")
              input(type="email", placeholder="email", name="email").form-control
              input(type="password", placeholder="password", name="password").form-control
              input(type="password", placeholder="password", name="passwordRetype").form-control
              button(type="submit").btn.btn-primary sign up

    script(src="/javascripts/jquery-2.0.3.min.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/stranger.js")
